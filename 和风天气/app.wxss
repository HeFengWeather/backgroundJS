/**app.wxss**/

page {
    width: 100%;
    height: 100%;
    overflow: hidden;
}

.container {
    height: 100%;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    /* padding: 50rpx 0;  */
    box-sizing: border-box;
}

.container::before {
    background-attachment: fixed;
    background-position: center center;
    background-size: auto 100%;
    background-repeat: no-repeat;
    width: 100%;
    height: 100%;
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1; 
    filter: blur(2rpx);
    opacity: 0.9;
    background-image: url('http://img.fotomen.cn/2015/10/landscape_usa02.jpg');
}

.wave-wapper {
    position: fixed;
    left: 0px;
    top: 0px;
}

.wave-position {
    position: absolute;
    width: 200px;
    height: 200px;
}

.wave-body {
    position: relative;
    width: 100%;
    height: 100%;
}

.wave {
    background-image: url('http://img.fotomen.cn/2015/10/landscape_usa02.jpg');
    position: absolute;
    top: calc((100% - 20px)/2);
    left: calc((100% - 20px)/2);
    width: 0px;
    height: 0px;
    border-radius: 300px;
    background-attachment: fixed;
    background-position: center center;
}

.wave0 {
    z-index: 2;
    background-size: auto 106%;
    animation: water_wave 0.8s ease-out;
}

.wave1 {
    z-index: 3;
    background-size: auto 102%;
    animation: water_wave 1.2s ease-out;
}

.wave2 {
    z-index: 4;
    background-size: auto 104%;
    animation: water_wave 1.6s ease-out;
}

.wave3 {
    z-index: 5;
    background-size: auto 101%;
    animation: water_wave 2.0s ease-out;
}

.wave4 {
    z-index: 6;
    background-size: auto 102%;
    animation: water_wave 2.4s ease-out;
}

.wave5 {
    z-index: 7;
    background-size: auto 100%;
    animation: water_wave 2.8s ease-out;
}

@keyframes water_wave {
    0% {
        top: calc((100% - 20px)/2);
        left: calc((100% - 20px)/2);
        width: 20px;
        height: 20px;
        opacity: 1;
    }

    50% {
        opacity: 0.8;
    }

    70% {
        opacity: 0.2;
    }

    100% {
        top: calc((100% - 200px)/2);
        left: calc((100% - 200px)/2);
        width: 200px;
        height: 200px;
        opacity: 0;
    }
}
