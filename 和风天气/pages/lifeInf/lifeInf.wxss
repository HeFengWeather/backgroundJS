/* pages/lifeInf/lifeInf.wxss */

.scroll {
    position: fixed;
    height: 100%;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center; /*垂直居中*/
    justify-content: center; /*水平居中*/
}

.sun{
    text-align: center;
    margin-top: 80rpx;
    margin-bottom: 40rpx;
    background-color: gray;
    width: 85%;
    padding-top: 40rpx;
    margin-left: auto;
    margin-right: auto;
}

.sun image{
    width: 90%;
    height: 150rpx;
    display: block;
    background-color: red;
    margin-left: auto;
    margin-right: auto;
}

.sun view{
    width: 50%;
    display: inline-block;
    text-align: center;
}

.sun text{
    color: white;
}

.sun-rise-time::after{
    content: '日出';
    font-size: smaller;
    display: block;
    color: white;
}

.sun-set-time::after{
    content: '日落';
    font-size: smaller;
    display: block;
    color: white;
}

.content::before{
    content: '';
    width: 100%;
    height: 5rpx;
    background-color: gray;
    opacity: 0.45;
    display: block;
}

.content {
}

.content-item::after {
    content: '';
    width: 100%;
    height: 3rpx;
    background-color: gray;
    opacity: 0.45;
    display: block;
    margin-top: 7%;
}

.content-item {
    width: 100%;
    height: 20%;
    display: block;
    color: white;
}

.content-item-title{
    width: 100%;
    height: 80rpx;
    display: inline-block;
    line-height: 80rpx;
    margin-bottom: 5%;
}

.content-item-title-index{
    margin-right: 5%;
    margin-left: 3%;
    font-size: small;
    font-weight: lighter;
    font-family: "SF Pro SC",
                 "SF Pro Display",
                 "SF Pro Icons",
                 "PingFang SC",
                 "Helvetica Neue",
                 "Helvetica",
                 "Arial",
                 sans-serif;
}

.content-item-title-brf {
    font-size: smaller;
    margin-right: 10%;
    float: right;
    color: gray;
}

.content-item-warpper {
    height: 80%;
}

.content-item-img {
    display: inline-block;
    width: 30%;
    text-align: center;
    height: 100%;
    vertical-align: top;
}

.content-item-img image {
    background-color: red;
    width: 80rpx;
    height: 80rpx;
}

.content-item-text {
    display: inline-block;
    width: 65%;
    font-size: smaller;
}

.content-item-text text {
    line-height: 1.4rem;
    letter-spacing: 0.03rem;
    font-weight: lighter;
    font-family: "SF Pro SC",
                 "SF Pro Display",
                 "SF Pro Icons",
                 "PingFang SC",
                 "Helvetica Neue",
                 "Helvetica",
                 "Arial",
                 sans-serif;
}
