.picker {
    z-index: 9999;
    padding: 30rpx 0rpx;
}

.picker-now {
    color: white;
    text-align: center;
    font-family: "SF Pro SC",
                 "SF Pro Display",
                 "SF Pro Icons",
                 "PingFang SC",
                 "Helvetica Neue",
                 "Helvetica",
                 "Arial",
                 sans-serif;
    font-size: 1.1rem;
    font-weight: bolder;
    letter-spacing: 13rpx;
}

.picker-now-region1 {
    display: block;
}

.picker-now-region2 {
    display: block;
    margin-top: 30rpx;
}

.content {
    z-index: 9999;
    display: block;
}

.content-now_weather {
    color: white;
    display: block;
    text-align: center;
    font-size: 3.5rem;
    font-weight: normal;
    font-family: "SF Pro Text",
                 "Myriad Set Pro",
                 "SF Pro Icons",
                 "Helvetica Neue",
                 "Helvetica",
                 "Arial",
                 sans-serif;
}

.content-now_weather text::after {
    content: 'Â°';
    margin-left: 20rpx;
}

.content-now_cond {
    color: white;
    display: block;
    margin-top: 20rpx;
    text-align: center;
}

.content-temp {
    color: white;
    display: block;
    text-align: center;
    margin-top: 40rpx;
    font-family: "SF Pro Text",
                 "Myriad Set Pro",
                 "SF Pro Icons",
                 "Helvetica Neue",
                 "Helvetica",
                 "Arial",
                 sans-serif;
    font-weight: normal;
    font-size: 1.1rem;
}

.content-temp-max {
    margin-right: 50rpx;
}

.content-temp-min {
    color: gray;
    opacity: 0.6;
}

.forecast {
    z-index: 9999;
    display: block;
    width: 100%;
    margin-bottom: 5%;
}

.forecast::before {
    content: '';
    width: 100%;
    height: 5rpx;
    background-color: gray;
    opacity: 0.45;
    display: block;
    margin-bottom: 2%;
}

.forecast-data {
    width: 100%;
    display: block;
    margin-bottom: 5%;
    color: white;
    text-align: center;
}

.forecast-data view {
    display: inline-block;
}

.forecast-data-date {
    margin-right: 120rpx;
}

.forecast-data-img {
    display: inline-block;
    position: relative;
    width: 75rpx;
    height: 75rpx;
    margin-right: 80rpx;
    top: 22rpx;
}

.forecast-data-maxtmp {
    margin-right: 40rpx;
}

.forecast-data-mintmp {
    color: gray;
    opacity: 0.7;
}
