<!--index.wxml-->
<view class='background'>
  <view class="container">
    <picker class="picker" mode="region" bindchange="bindRegionChange" value="{{region}}">
      <view class="picker-now">
        {{region[0]}} {{region[1]}} {{region[2]}}
      </view>
    </picker>
    <text id="now_weather">{{now_weather}}Â°C</text>
    <text id="now_cond">{{now_cond}}</text>
    <view id="temp">
    <text class='temp-max'>{{high_tmp}}</text>
    <text class='temp-min'>{{low_tmp}}</text>
    </view>
    <block id="forecast" wx:for="{{for_array}}">
      <view class='cond-data'>
        <view class='cond-data-date'>{{item.date}}</view><image class='cond-img' src="/image/cond_icon/{{item.cond_code_d}}.png"></image>
        <view class='cond-data-maxtmp'>{{item.tmp_max}}</view>
        <view class='cond-data-mintmp'>{{item.tmp_min}}</view>
      </view>

    </block>
  </view>
</view>